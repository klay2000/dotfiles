;;disable splash screen and startup message
(setq inhibit-startup-message t) 
(setq initial-scratch-message nil)

;;disable menu bar
(menu-bar-mode -1)

;;disable tool bar
(tool-bar-mode -1)

;;disable scroll bar
(scroll-bar-mode -1)

;;set colors
(set-background-color "black")
(set-foreground-color "white")
